<div class="table-responsive">
  <table class="table table-striped" >
    <thead>
      <tr>
        <th></th>
        <th>目的のもの</th>
        <th>課金額</th>
        <th>単発</th>
        <th>10連</th>
        <th>合計</th>
        <th>結果</th>
        <th>当選回数</th>
        <th>消費した課金アイテムの数</th>
        <th>備考</th>
        <th></th>
      </tr>
    </thead>
     <tbody>
       <tr>
        <% @gacha_kakeibos.each do |gacha_kakeibo| %>
         <th></th>
         <td><%= gacha_kakeibo.object %></td>
         <td><%= gacha_kakeibo.billing_amount %>円</td>
         <td><%= gacha_kakeibo.single_gacha %>回</td>
         <td><%= gacha_kakeibo.ten_combo_gacha %>回</td>
         <td><%= gacha_kakeibo.total %>回</td>
         <td>
           <% if gacha_kakeibo.is_result_status == 1 %>
             当選
           <% else %>
             落選
           <% end %>
         </td>
         <td><%= gacha_kakeibo.winning_count %></td>
         <td><%= gacha_kakeibo.billing_item %>個</td>
         <td><%= gacha_kakeibo.remarks %></td>
         <td><%= link_to 'ガチャ家計簿データ修正', edit_gacha_kakeibo_path(gacha_kakeibo) %></td>
       </tr>
      <% end %>
     </tbody>
  </table>
</div>