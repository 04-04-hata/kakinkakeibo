<div class="kakinkakeibo">

  <h1>家計簿名編集</h1>

  <%= form_with model:@kakeibo, local: true do |f| %>
    <div class="form-group">
      <%= render 'layouts/error_messages', model: f.object %>
      <%= f.label :name, "家計簿名" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "変更" %>
    </div>
  <% end %>

</div>