<h1>その他家計簿データ修正</h1>

<div class="otherform">
  <%= form_with model:@other_kakeibo, local: true do |f| %>

    <div class="form-group">
      <%= f.label :object, "目的のもの" %>
      <%= f.text_field :object, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :billing_amount, "課金額" %>
      <%= f.text_field :billing_amount, :placeholder => "金額を半角数字で入力(課金をしていない場合は0と入力)" , class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :remarks, "備考" %>
      <%= f.text_field :remarks, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "記述" %>
    </div>
  <% end %>
</div>